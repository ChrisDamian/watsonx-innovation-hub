{
  "name": "watsonx-innovation-hub",
  "version": "1.0.0",
  "description": "Multi-Industry AI Innovation Hub powered by Watsonx",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"src/__tests__/.*\\.test\\.ts$\"",
    "test:integration": "jest --testPathPattern=\"src/__tests__/integration/.*\\.test\\.ts$\"",
    "test:e2e": "jest --testPathPattern=\"src/__tests__/e2e/.*\\.test\\.ts$\"",
    "test:frontend": "jest --testPathPattern=\"frontend/.*\\.test\\.tsx$\"",
    "test:mental-health": "jest --testPathPattern=\"modules/mental-health/.*\\.test\\.ts$\"",
    "test:all": "bash scripts/run-tests.sh",
    "test:unit-only": "bash scripts/run-tests.sh --unit-only",
    "test:integration-only": "bash scripts/run-tests.sh --integration-only",
    "test:e2e-only": "bash scripts/run-tests.sh --e2e-only",
    "test:frontend-only": "bash scripts/run-tests.sh --frontend-only",
    "lint": "eslint src/**/*.ts modules/**/*.ts frontend/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts modules/**/*.ts frontend/**/*.tsx --fix",
    "format": "prettier --write src/**/*.ts modules/**/*.ts frontend/**/*.tsx",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level=high",
    "dev:mental-health": "NODE_ENV=development MODULE=mental-health nodemon modules/mental-health/src/server.ts",
    "start:mental-health": "NODE_ENV=production MODULE=mental-health node dist/modules/mental-health/server.js",
    "build:mental-health": "tsc -p modules/mental-health/tsconfig.json",
    "db:setup": "node scripts/setup-databases.js",
    "db:migrate": "node scripts/migrate-databases.js",
    "db:seed": "node scripts/seed-databases.js",
    "docker:build": "docker build -t watsonx-hub .",
    "docker:run": "docker run -p 5000:5000 watsonx-hub",
    "docker:test": "docker build -f Dockerfile.test -t watsonx-hub-test . && docker run watsonx-hub-test",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test:unit",
    "ci": "npm run validate && npm run test:all",
    "release": "semantic-release"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "@ibm-cloud/watsonx-ai": "^1.0.0",
    "ibm-watson": "^7.1.2",
    "socket.io": "^4.7.4",
    "crypto-js": "^4.2.0",
    "rate-limiter-flexible": "^3.0.8",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "redis-mock": "^0.56.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "semantic-release": "^22.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "workspaces": [
    "modules/*"
  ],
  "keywords": [
    "watsonx",
    "ai",
    "multi-industry",
    "governance",
    "africa",
    "europe",
    "mental-health",
    "fintech",
    "healthcare",
    "mobility",
    "agriculture",
    "education",
    "aviation",
    "collaboration"
  ],
  "author": "Watsonx Innovation Hub Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/watsonx-innovation-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/watsonx-innovation-hub/issues"
  },
  "homepage": "https://github.com/your-org/watsonx-innovation-hub#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/modules",
      "<rootDir>/frontend"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts",
      "**/__tests__/**/*.tsx",
      "**/?(*.)+(spec|test).tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "modules/**/*.ts",
      "frontend/**/*.tsx",
      "!src/**/*.d.ts",
      "!src/types/**/*.ts",
      "!modules/**/types/**/*.ts",
      "!**/*.config.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "testTimeout": 30000,
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@frontend/(.*)$": "<rootDir>/frontend/$1"
    },
    "projects": [
      {
        "displayName": "Core Platform",
        "testMatch": [
          "<rootDir>/src/**/*.test.ts"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "Mental Health Module",
        "testMatch": [
          "<rootDir>/modules/mental-health/**/*.test.ts"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "Frontend Components",
        "testMatch": [
          "<rootDir>/frontend/**/*.test.tsx"
        ],
        "testEnvironment": "jsdom"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn"
    },
    "ignorePatterns": [
      "dist/",
      "coverage/",
      "node_modules/"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  }
}