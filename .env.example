# =============================================================================
# WATSONX INNOVATION HUB - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_VERSION=v1

# -----------------------------------------------------------------------------
# DATABASE CONNECTIONS
# -----------------------------------------------------------------------------
# MongoDB (AI Models, User Data, Sessions)
MONGODB_URI=mongodb://localhost:27017/watsonx-hub
MONGODB_OPTIONS=retryWrites=true&w=majority

# PostgreSQL (Governance, Audit Logs, Structured Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=watsonx_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Redis (Caching, Sessions, Rate Limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# -----------------------------------------------------------------------------
# WATSONX PLATFORM CONFIGURATION
# -----------------------------------------------------------------------------
# Main Watsonx Credentials
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_REGION=us-south
WATSONX_CONNECTION_ID=your_connection_id_here

# Watsonx.ai Configuration
WATSONX_AI_URL=https://us-south.ml.cloud.ibm.com/ml/v4
WATSONX_AI_VERSION=2023-05-29

# Watsonx.data Configuration
WATSONX_DATA_URL=https://us-south.lakehouse.cloud.ibm.com
WATSONX_DATA_CATALOG_ID=your_catalog_id_here

# Watsonx.governance Configuration
WATSONX_GOVERNANCE_URL=https://us-south.aiopenscale.cloud.ibm.com
WATSONX_GOVERNANCE_INSTANCE_ID=your_governance_instance_id

# -----------------------------------------------------------------------------
# MENTAL HEALTH MODULE - DSM INTEGRATION
# -----------------------------------------------------------------------------
# DSM Dataset Configuration
DSM_DATASET_ID=dsm-5-tr-dataset-2024
DSM_VERSION=DSM-5-TR
DSM_LANGUAGE_MODELS=en,sw,fr
DSM_CLASSIFICATION_MODEL_ID=dsm-classifier-v2
DSM_SEVERITY_MODEL_ID=dsm-severity-v1

# Mental Health Specific Models
MENTAL_HEALTH_TRIAGE_MODEL=mental-health-triage-v3
MENTAL_HEALTH_CHAT_MODEL=mental-health-chat-multilingual-v2
MENTAL_HEALTH_RISK_MODEL=suicide-risk-assessment-v1

# DSM Training Configuration
DSM_TRAINING_DATA_PATH=/datasets/mental-health/dsm-training
DSM_VALIDATION_SPLIT=0.2
DSM_TEST_SPLIT=0.1
DSM_BATCH_SIZE=16
DSM_LEARNING_RATE=2e-5
DSM_MAX_EPOCHS=5

# Mental Health Compliance
HIPAA_COMPLIANCE_MODE=true
MENTAL_HEALTH_DATA_RETENTION_DAYS=2555  # 7 years
ANONYMIZATION_REQUIRED=true
CONSENT_TRACKING_ENABLED=true

# -----------------------------------------------------------------------------
# INDUSTRY MODULE DATASETS
# -----------------------------------------------------------------------------
# FinTech Datasets
FINTECH_CREDIT_DATASET_ID=credit-scoring-africa-v2
FINTECH_FRAUD_DATASET_ID=fraud-detection-global-v3
FINTECH_KYC_DATASET_ID=kyc-compliance-v1

# Healthcare Datasets (Beyond Mental Health)
HEALTHCARE_GENERAL_DATASET_ID=general-health-triage-v2
HEALTHCARE_SYMPTOM_DATASET_ID=symptom-classification-multilingual-v1
HEALTHCARE_DRUG_INTERACTION_DATASET_ID=drug-interactions-v3

# Mobility Datasets
MOBILITY_DEMAND_DATASET_ID=mobility-demand-nairobi-v2
MOBILITY_ROUTE_DATASET_ID=route-optimization-africa-v1
MOBILITY_TRAFFIC_DATASET_ID=traffic-patterns-v2

# Agriculture Datasets
AGRICULTURE_YIELD_DATASET_ID=crop-yield-east-africa-v3
AGRICULTURE_WEATHER_DATASET_ID=weather-patterns-v2
AGRICULTURE_SOIL_DATASET_ID=soil-analysis-v1

# Education Datasets
EDUCATION_LEARNING_DATASET_ID=adaptive-learning-v2
EDUCATION_ASSESSMENT_DATASET_ID=skill-assessment-v1
EDUCATION_GOVERNANCE_DATASET_ID=compliance-training-v1

# Aviation Datasets
AVIATION_SAFETY_DATASET_ID=aviation-safety-kcaa-v2
AVIATION_DRONE_DATASET_ID=drone-traffic-v1
AVIATION_MAINTENANCE_DATASET_ID=predictive-maintenance-v2

# Collaboration Datasets
COLLABORATION_MEETING_DATASET_ID=meeting-summarization-v2
COLLABORATION_TRANSLATION_DATASET_ID=multilingual-translation-v3

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=watsonx-innovation-hub
JWT_AUDIENCE=watsonx-hub-users

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_SALT_ROUNDS=12

# API Security
API_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGINS=http://localhost:3000,https://your-domain.com
API_TRUSTED_PROXIES=127.0.0.1,::1

# Session Security
SESSION_SECRET=your_session_secret_key_here
SESSION_SECURE=false  # Set to true in production with HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
SESSION_MAX_AGE=86400000  # 24 hours

# -----------------------------------------------------------------------------
# GOVERNANCE AND COMPLIANCE
# -----------------------------------------------------------------------------
# Bias Detection Thresholds
BIAS_DETECTION_THRESHOLD=0.8
DEMOGRAPHIC_PARITY_THRESHOLD=0.8
EQUALIZED_ODDS_THRESHOLD=0.8
CALIBRATION_THRESHOLD=0.8

# Explainability Configuration
EXPLAINABILITY_REQUIRED=true
EXPLANATION_METHOD=lime  # lime, shap, counterfactual
EXPLANATION_CONFIDENCE_THRESHOLD=0.7

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_LEVEL=enhanced  # basic, enhanced, full
AUDIT_INCLUDE_REQUEST_BODY=true
AUDIT_INCLUDE_RESPONSE_BODY=false

# Compliance Regions
GDPR_REGIONS=EU,EEA
HIPAA_REGIONS=US
KCAA_REGIONS=KE,TZ,UG
DATA_RESIDENCY_ENFORCEMENT=true

# -----------------------------------------------------------------------------
# MONITORING AND LOGGING
# -----------------------------------------------------------------------------
# Logging Configuration
LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=json  # json, simple
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000  # 1 minute
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_DSN=your_error_tracking_dsn_here

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# Email Service (for notifications)
EMAIL_SERVICE_PROVIDER=sendgrid  # sendgrid, ses, smtp
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM_ADDRESS=noreply@watsonx-hub.com
EMAIL_FROM_NAME=Watsonx Innovation Hub

# SMS Service (for 2FA)
SMS_SERVICE_PROVIDER=twilio  # twilio, aws-sns
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+1234567890

# File Storage
FILE_STORAGE_PROVIDER=s3  # s3, gcs, azure, local
FILE_STORAGE_BUCKET=watsonx-hub-files
FILE_STORAGE_REGION=us-south
FILE_STORAGE_ACCESS_KEY=your_storage_access_key
FILE_STORAGE_SECRET_KEY=your_storage_secret_key

# -----------------------------------------------------------------------------
# DEVELOPMENT AND TESTING
# -----------------------------------------------------------------------------
# Development Mode Settings
DEV_MODE=true
DEV_MOCK_WATSONX=false
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/watsonx-hub-test
TEST_POSTGRES_DB=watsonx_hub_test
TEST_REDIS_DB=1
TEST_TIMEOUT=30000

# Feature Flags
FEATURE_MENTAL_HEALTH_MODULE=true
FEATURE_FINTECH_MODULE=true
FEATURE_HEALTHCARE_MODULE=true
FEATURE_MOBILITY_MODULE=true
FEATURE_AGRICULTURE_MODULE=true
FEATURE_EDUCATION_MODULE=true
FEATURE_AVIATION_MODULE=true
FEATURE_COLLABORATION_MODULE=true

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Deployment Level (1=MVP, 2=Scalable, 3=Enterprise)
DEPLOYMENT_LEVEL=1
CONTAINER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# Kubernetes Configuration (Level 3)
K8S_NAMESPACE=watsonx-hub
K8S_CLUSTER_NAME=watsonx-cluster
K8S_INGRESS_HOST=api.watsonx-hub.com

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30
LB_RETRIES=3

# Auto-scaling Configuration
AUTO_SCALE_MIN_REPLICAS=2
AUTO_SCALE_MAX_REPLICAS=10
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80